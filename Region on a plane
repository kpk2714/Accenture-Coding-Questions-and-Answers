import java.util.Scanner;

public class getRegions
{
	static int get(int n)
	{
		int num = (n*(n+1)/2)+1;
		return num;
	}

	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		System.out.print(get(n));
	}
}
